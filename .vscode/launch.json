    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'virust'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=virust",
                    "--package=virust"
                ],
                "filter": {
                    "name": "virust",
                    "kind": "bin"
                }
            },
            "args": ["memory"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "TRACE"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'virust'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=virust",
                    "--package=virust"
                ],
                "filter": {
                    "name": "virust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}