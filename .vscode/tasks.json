{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": ["$rustc", "$rust-panic"],
      "group": "build",
      "label": "Build ViRust Debug"
    },
    {
      "type": "cargo",
      "command": "build",
      "args": ["--release"],
      "problemMatcher": ["$rustc", "$rust-panic"],
      "group": "build",
      "label": "Build ViRust Release"
    },
    {
      "type": "cargo",
      "command": "build",
      "args": ["--release", "--target x86_64-pc-windows-gnu"],
      "problemMatcher": ["$rustc", "$rust-panic"],
      "group": "build",
      "label": "Build ViRust Windows Release"
    },
    {
      "type": "cargo",
      "command": "run",
      "args": ["--help"],
      "problemMatcher": ["$rustc", "$rust-panic"],
      "label": "Run ViRust Help Menu"
    }
  ]
}
